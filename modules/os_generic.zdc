
_thread :: import thread;

Terminal_Color :: enum
{
    WHITE;
    BLACK;
    RED;
    GREEN;
    BLUE;
    CYAN;
    PURPLE;
    YELLOW;
}

Thread :: struct
{
    handle: u64;
    user_data: *void;
}

Thread_Routine :: typedef *(thread: *Thread) -> *void;

Thread_Start_Info :: struct
{
    thread: Thread;
    thread_routine: Thread_Routine;
    signal_started: _thread.Atomic_Cond;
    signal_thread_copied: _thread.Atomic_Cond;
}


