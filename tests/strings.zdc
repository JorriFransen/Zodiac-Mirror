
// #dynamic_link "libc.so.6";
#dynamic_link "msvcrt.dll";

#foreign putchar :: (c: int) -> int;
#foreign getchar :: () -> int;
#foreign printf :: () -> void;

newline :: () -> void { putchar(10); }

print_digit :: (digit: int) -> void
{
    putchar(digit + 48);
    newline();
}

main :: () -> int
{
    return pointer_test();
}

pointer_test :: () -> void
{
    x: int = 3;

    print_digit(x);

    x_ptr : *int;
    x_ptr = *x;

    print_digit(<x_ptr);

    <x_ptr = 4;

    print_digit(x);

    c : u8 = 'c';
    putchar(c);
    newline();

    return <x_ptr;
}
