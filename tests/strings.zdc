
c :: import c;

newline :: () -> void { c.putchar(10); }

print_digit :: (digit: int) -> void
{
    c.putchar(digit + 48);
    newline();
}

main :: () -> int
{
    return pointer_test();
}

pointer_test :: () -> void
{
    x: int = 3;

    print_digit(x);

    x_ptr : *int;
    x_ptr = *x;

    print_digit(<x_ptr);

    <x_ptr = 4;

    print_digit(x);

    ch : u8 = 'c';
    c.putchar((:int)ch);
    newline();

    hello_zodiac := "Hello zodiac!";
    c.puts(hello_zodiac);

    c.putchar((:int)hello_zodiac[1]);
    newline();

    hello_zodiac[4] = 'x';

    c.puts(hello_zodiac);

    z_ptr := *hello_zodiac[5];
    <z_ptr = 'z';
    c.puts(hello_zodiac);

    return 0;
}
