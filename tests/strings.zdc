
_c :: import c;
using _c;

print_digit :: (digit: int) -> void
{
    printf("%ld\n", digit);
}

newline :: () { printf("\n"); }

main :: () -> int
{
    return pointer_test();
}

pointer_test :: () -> void
{
    x: int = 3;

    print_digit(x);

    x_ptr : *int;
    x_ptr = *x;

    print_digit(<x_ptr);

    <x_ptr = 4;

    print_digit(x);

    ch : u8 = 'c';
    putchar((:int)ch);
    newline();

    hello_zodiac := "Hello zodiac!";
    puts(hello_zodiac);

    putchar((:int)hello_zodiac[1]);
    newline();

    hello_zodiac[4] = 'x';

    puts(hello_zodiac);

    z_ptr := *hello_zodiac[5];
    <z_ptr = 'z';
    puts(hello_zodiac);

    return 0;
}
