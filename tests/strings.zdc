
io :: import io;

newline :: () -> void { io.putchar(10); }

print_digit :: (digit: int) -> void
{
    io.putchar(digit + 48);
    newline();
}

main :: () -> int
{
    return pointer_test();
}

pointer_test :: () -> void
{
    x: int = 3;

    print_digit(x);

    x_ptr : *int;
    x_ptr = *x;

    print_digit(<x_ptr);

    <x_ptr = 4;

    print_digit(x);

    c : u8 = 'c';
    io.putchar(c);
    newline();

    hello_zodiac := "Hello zodiac!";
    io.puts(hello_zodiac);

    io.putchar(hello_zodiac[1]);
    newline();

    hello_zodiac[4] = 'x';

    io.puts(hello_zodiac);

    z_ptr := *hello_zodiac[5];
    <z_ptr = 'z';
    io.puts(hello_zodiac);

    return 0;
}
