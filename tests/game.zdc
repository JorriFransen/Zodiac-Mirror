
io :: import io;
glfw :: import glfw;
gl :: import gl;

main :: () -> int
{
    io.printf("zodiac game\n");

    if (!glfw.glfwInit())
    {
        io.printf("glfwInit failed\n");
        return 9;
    }

    window := glfw.glfwCreateWindow(640, 480, "Triangles!!!", null, null);
    if (!window)
    {
        io.printf("glfwCreateWindow failed\n");
        return 9;
    }

    while (!glfw.glfwWindowShouldClose(window))
    {
        glfw.glfwPollEvents();

        gl.glClear(gl.GL_COLOR_BUFFER_BIT);
        gl.glBegin(gl.GL_TRIANGLE);
        gl.glVertex3f(0.0, 0.0, 0.0);
        gl.glVertex3f(0.5, 0.0, 0.0);
        gl.glVertex3f(0.25, 0.5, 0.0);
        gl.glEnd();
        gl.glFlush();

        glfw.glfwSwapBuffers(window);
    }
}
