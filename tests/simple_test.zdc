
static_if (PLATFORM_WINDOWS)
{
    #dynamic_link "msvcrt.dll";
}
else
{
    #dynamic_link "libc.so.6";
}

#foreign putchar :: (x: int) -> int;
#foreign puts :: (string: *u8) -> int;
#foreign printf :: (format: *u8, ...) -> int;

newline :: () -> void { putchar(10); }

print_digit :: (digit: int) -> void
{
    putchar(digit + 48);
    newline();
}

main :: () -> int
{
    loop();
    array_test();
}

array_test :: () -> void
{
    printf("array_test()\n");

    int_array : [5]int = { 255, 256, 33, 44, 555 };
    printf("Array length: %lu\n", array_length(int_array));

    for (i := 0; i < array_length(int_array); i = i + 1)
    {
        printf("int_array[%ld] = %ld\n", i, int_array[i]);
    }

    int_array[3] = 444;

    printf("\n");

    for (i := 0; i < array_length(int_array); i = i + 1)
    {
        printf("int_array[%ld] = %ld\n", i, int_array[i]);
    }

    int_array_3_ptr := *int_array[3];
    <int_array_3_ptr = 888;

    printf("\n");

    for (i := 0; i < array_length(int_array); i = i + 1)
    {
        printf("int_array[%ld] = %ld\n", i, int_array[i]);
    }

    int_array = { 5, 4, 3, 2, 1 };

    printf("\n");

    for (i := 0; i < array_length(int_array); i = i + 1)
    {
        printf("int_array[%ld] = %ld\n", i, int_array[i]);
    }
}

loop :: () -> void
{
    i := 0;
    while (i < 10)
    {
        print_digit(i);
        i = i + 1;
    }

    i = i - 1;

    while (i >= 0)
    {
        print_digit(i);
        i = i - 1;
    }

    for (j := 0; j < 5; j = j + 1)
    {
        print_digit(j);
    }

    for (y := 0; y < 10; y = y + 1)
    {
        for (x := 0; x < 10; x = x + 1)
        {
            printf("%ld,%ld  ", x, y);
        }

        printf("\n");
    }

    putchar('\n');
}
