
#dynamic_link "libc.so.6";
// #dynamic_link "msvcrt.dll";

#foreign putchar :: (x: int) -> int;
#foreign puts :: (string: *u8) -> int;
#foreign printf :: (format: *u8, ...) -> int;

newline :: () -> void { putchar(10); }

print_digit :: (digit: int) -> void
{
    putchar(digit + 48);
    newline();
}

main :: () -> int
{
    c : u8 = 'c';
    string : *u8 = "Hello Zodiac!!!";
    puts(string);
    puts("test");

    loop();
}

loop :: () -> void
{
    i := 0;
    while (i < 10)
    {
        print_digit(i);
        i = i + 1;
    }

    i = i - 1;

    while (i >= 0)
    {
        print_digit(i);
        i = i - 1;
    }

    for (j := 0; j < 5; j = j + 1)
    {
        print_digit(j);
    }

    for (y := 0; y < 10; y = y + 1)
    {
        for (x := 0; x < 10; x = x + 1)
        {
            printf("%ld,%ld  ", x, y);
        }

        printf("%ld", x);
        putchar(10);
    }

    printf("%ld", y);
    putchar(10);
}
