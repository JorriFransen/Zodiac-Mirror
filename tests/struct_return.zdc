_c :: import c;

main :: () -> int
{
    _builtin_open_std_handles();

    v1 : Vec2;
    v1 = make_vec2(4, 5);

    _c.printf("v1: %d, %d\n", v1.x, v1.y);

    return 0;
}

Vec2 :: struct
{
    x: int;
    y: int;
}

vec2_0 :: () -> Vec2
{
    return { 0, 0 };
}

make_vec2 :: (x: int, y: int) -> Vec2
{
    return { x, y };
}
