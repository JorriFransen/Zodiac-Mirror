create_variable :: (name: *u8, type: *u8) -> *u8
{
    sb : SB.String_Builder;
    SB.init(*sb, 128);

    SB.append(*sb, name);
    SB.append(*sb, " : ");
    SB.append(*sb, type);
    SB.append(*sb, ";");

    result := SB.copy_to_string(*sb);
    SB.free(*sb);
    return result;
}
