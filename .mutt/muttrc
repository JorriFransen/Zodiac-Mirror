
source "imap-pass -p 'set my_pass=' -g jorrifransen@gmail.com |"

set editor=nvim

set ssl_starttls=yes
set ssl_force_tls=yes
set imap_user = "jorrifransen@gmail.com"
set from = "jorrifransen@gmail.com"
set realname = "Jorri Fransen"
#set folder = imaps://imap.gmail.com/
set folder = "~/.mail/gmail/"
set spoolfile = +INBOX
set record = ""
set postponed = +[Gmail]/Drafts
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/cache/certificates"
set smtp_url = "smtps://jorrifransen@smtp.gmail.com"
set move = no
set imap_keepalive = 900

source colors.muttrc

set mailcap_path=~/.mailcap
macro attach 'V' "<pipe-entry>cat >~/.cache/mutt/mail.html && qutebrowser ~/.cache/mutt/mail.html && rm ~/.cache/mutt/mail.html<enter>"

bind index g noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=[Gmail]/All Mail<enter>" "Go to all mail"
macro index gs "<change-folder>=[Gmail]/Starred<enter>" "Go to starred messages"
macro index gd "<change-folder>=[Gmail]/Drafts<enter>" "Go to drafts"
macro index gb "<change-folder>=[Gmail]/Bin<enter>" "Go to bin"

bind index,pager B sidebar-toggle-visible
set sleep_time = 0
set timeout=60
